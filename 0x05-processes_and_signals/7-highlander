#!/usr/bin/env bash
# A Bash script that runs an infinite loop and displays "OK" when it receives a SIGTERM signal.

# Trap SIGTERM signal and print "OK", then continue running
trap 'echo "OK";' SIGTERM

# Infinite loop that prints "To infinity and beyond" every 2 seconds
while true
do
  echo "To infinity and beyond"
  sleep 2
done
